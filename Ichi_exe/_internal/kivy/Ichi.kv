#Bouton rond
<RoundedButton@Button>:
    font_name: "fonts/OnsenJapanDemoRegular.ttf" 
    font_size: '24sp'
    background_color: (0, 0, 0, 0)
    background_normal: ''
    canvas.before:
        Color: 
            rgba: (0, 0.5, 1, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [45]

#Gestionnaire d'écrans
MyScreenManager:
    HomeScreen:
        name: "home"
    GameSelect:
        name: "game_select"
    GameScreen:
        name: "game_screen"

#Écran d'accueil
<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 50

        #Logo
        BoxLayout:
            size_hint: (1, 0.7)  
            orientation: 'vertical'
            Image:
                source: './img/ICHI_logo.png' 
                size_hint: (0.45, 0.45)
                allow_stretch: True
                keep_ratio: True
                pos_hint: {"center_x": 0.5}

        #Bouton Play
        RoundedButton:
            text: "Play"
            size_hint: (0.5, 0.2)
            size: (275, 90)
            pos_hint: {"center_x": 0.5}
            on_release:
                app.root.current = "game_select"

        #Bouton Settings
        RoundedButton:
            text: "Exit"
            size_hint: (0.5, 0.2)
            pos_hint: {"center_x": 0.5}
            on_release:
                app.stop()

<GameSelect>:
    BoxLayout:
        orientation:'vertical'
        spacing: 20
        padding: 50
        Label:
            text: "Choisissez le mode de jeu"
            font_name: "fonts/OnsenJapanDemoRegular.ttf" 
            font_size: '24sp'
        RoundedButton:
            text: "Solo"
            size_hint: (0.5, 0.3)
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = "game_screen"

<GameScreen>:
    RelativeLayout:
        Button:
            size_hint:(.12, .12)
            pos_hint:{'x':.0, 'y':.88}
            background_normal: "img/return.png"
            on_release: app.root.current = "home"
        Label:
            id: nb_cartes_ia
            size_hint:(.1, .1)
            pos_hint:{'x':.80, 'y':.90}
            text: ""
            font_name: "fonts/Montserrat-SemiBold.ttf"
        Label:
            size_hint:(.40, .15)
            pos_hint:{'center_x': 0.5, 'y': .82}
            id: msg_talon
            text: ""  
            font_name: "fonts/Montserrat-SemiBold.ttf"
        RelativeLayout:
            id: talon
            size_hint:(.40, .15)
            pos_hint: {'center_x': 0.5, 'center_y': 0.75}
            text: ""  
            font_size: '24sp'
            font_name: "fonts/Montserrat-SemiBold.ttf"
        BoxLayout:
            size_hint:(.40, .15)
            pos_hint:{'x':0.02, 'center_y':0.5}
            id: main_joueur
            orientation: 'horizontal'
            spacing: 18
        Label:
            size_hint:(.40, .15)
            pos_hint:{'x':.30, 'y':.25}
            id: message
            text: ""  
            font_name: "fonts/Montserrat-SemiBold.ttf"
        RoundedButton:
            size_hint:(.40, .15)
            pos_hint:{'x':.30, 'y':.10}
            text: "Passer le tour"
            on_release: root.passer_tour()